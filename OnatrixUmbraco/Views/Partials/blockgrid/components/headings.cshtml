@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{

    var headingText = Model.Content.Value<string>("headlineText");

    var headlineType = Model.Content.Value<string>("headlineType");
    var type = headlineType switch 
    {
        "Heading 1" => "h1",
        "Heading 2" => "h2",
        "Heading 3" => "h3",
        "Heading 4" => "h4",
        "Heading 5" => "h5",
        "Heading 6" => "h6",
        _ => "h2"
    };    
    
    var headlineColor = Model?.Content.Value<string>("headlineColor") ?? null;
}

@if (!string.IsNullOrEmpty(headlineColor))
{
    <@type style="color: @headlineColor">
            @headingText
    </@type>
}
else
{
    <@type>
        @headingText
    </@type>
}