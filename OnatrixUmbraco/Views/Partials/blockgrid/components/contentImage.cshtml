@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var selectedImage = Model?.Content.Value<IPublishedContent>("selectedImage")?.Url() ?? null;

    var imageAlignment = Model.Content.Value<string>("imageAlignment");
    var alignment = imageAlignment switch
    {
        "Start" => "align-self-start",
        "Center" => "align-self-center",
        "End" => "align-self-end",
        _ => "align-self-center"
    };

}


<img class="@alignment" src="@selectedImage" >