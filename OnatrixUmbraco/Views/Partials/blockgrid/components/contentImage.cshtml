@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var selectedImage = Model?.Content.Value<IPublishedContent>("selectedImage")?.Url() ?? null;
    var alternativeText = Model.Content.Value<string>("alternativeText");
    var imageAlignment = Model.Content.Value<string>("imageAlignment");
    var alignment = imageAlignment switch
    {
        "Left" => "align-self-start",
        "Center" => "align-self-center",
        "Right" => "align-self-end",
        "Full Width" => "",
        _ => ""
    };

}


<img class="@alignment" src="@selectedImage" alt="@alternativeText" >